{
  "name": "mediatracker",
  "version": "1.0.0",
  "bin": "build/index.js",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "dev": "node --enable-source-maps esbuild.js --watch --start-server",
    "watch:build": "node --enable-source-maps esbuild.js --watch",
    "build": "lingui extract && lingui compile && node --enable-source-maps esbuild.js",
    "start": "node --enable-source-maps build/index.js start-server",
    "lint": "tsc --noEmit"
  },
  "description": "Self hosted media tracker for movies, tv shows, video games, books and audiobooks",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bonukai/MediaTracker.git"
  },
  "keywords": [
    "self hosted"
  ],
  "author": {
    "name": "bonukai",
    "url": "https://github.com/bonukai"
  },
  "license": "MIT",
  "dependencies": {
    "@lingui/core": "^4.14.1",
    "@trpc/client": "^10.45.2",
    "@trpc/server": "^10.45.2",
    "argon2": "^0.41.1",
    "better-sqlite3": "^11.7.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "compression": "^1.7.5",
    "cookie-parser": "^1.4.7",
    "csv-parse": "^5.6.0",
    "csv-stringify": "^6.5.2",
    "date-fns": "^4.1.0",
    "express": "^4.21.2",
    "knex": "^3.1.0",
    "lodash": "^4.17.21",
    "loglevel": "^1.9.2",
    "nanoid": "^5.0.9",
    "pg": "^8.13.1",
    "sharp": "0.33.5",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.23.5"
  },
  "devDependencies": {
    "@lingui/cli": "^4.14.1",
    "@lingui/format-json": "^4.14.1",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^4.17.21",
    "@types/lodash": "^4.17.13",
    "@types/pg": "^8.11.10",
    "@vitest/coverage-istanbul": "^2.1.8",
    "esbuild": "^0.24.0",
    "glob": "^10.4.5",
    "openapi-types": "^12.1.3",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
